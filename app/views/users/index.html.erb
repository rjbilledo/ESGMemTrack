<p id="notice"><%= notice %></p>

<h1 class='myHeader'>Users</h1>

<table class = 'table-striped table-hover tablecenter'>
  <thead class = 'rowbackground'>
    <tr class = 'rowbackground'>
      <th>User</th>
      <th>Email</th>
      <th>Phone Number</th>
      <th>Points</th>
      <th>Grade</th>
      <th>Classification</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody class = 'table'>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.full_name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= user.points %></td>
        <td><%= user.grade %></td>
        <td><%= Classification.where(id: user.classification_id).last.classification_name %></td>      
        <% if current_user.classification_id > 2 %>
          <td class="button"><%= link_to 'Edit', edit_user_registration_path(current_user) %></td>
          <td class="button"><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %> 
        
      </tr>
    <% end %>
  </tbody>
</table>

