<html>
    <head>
        <link rel="stylesheet" href="../../assets/stylesheets/style.css">
    </head>

    <body>
        <% if current_user %>

        <div class="top">    
            <p id = 'title'>Eta Sigma Gamma</p>
            <p id = 'home'><%= link_to 'EVENTS', events_path, class: 'firsthead' %></p>
            <p id = 'home'><%= link_to 'ATTENDANCE', attendances_path, class: 'firsthead' %> </p>
            <p id = 'port'><%= link_to 'USERS', users_path, class: 'firsthead' %> </p><br>           
        </div>
        <div class="top2">
            <p id = 'username'> <%= current_user.full_name %> </p>
            <p id = 'email'> <%= current_user.email %> </p>
        </div>
        <div class = "seal1">
            <%= image_tag "esg_seal.jpg"%>
        </div>
        <div class = "middle">
            <p class = 'middleinfo'>Member Info:</p> <br>
            <p class = 'middleinfo'>Total Points: <%= current_user.points %></p><br>
            <% if current_user.classification_id %>
            
            <% end %>
            <%= link_to 'Edit Profile', edit_user_registration_path(current_user) %>
        </div>


        <h2 class = 'firsthead'><%= current_user.email %></h2>
        <h2><%= current_user.full_name %></h2>
        <h2><%= current_user.points %></h2>
        <h2><%= current_user.uin %></h2>
        <h2><%= current_user.grade %></h2>
        <h2><%= current_user.classification_id %></h2>
        <h2><%= current_user.phone %></h2>
        <%= link_to 'Show All Event Attendance', attendances_path %> <br>
        
        <td><%= link_to 'Profile', edit_user_registration_path(current_user) %><br></td>

        <%= button_to "Logout", destroy_user_session_path, data: {turbo: "false"}, method: :delete %>
        <% else %>
        <%= link_to "Login", new_user_session_path %>
        <% end %>
    </body>
</html>
